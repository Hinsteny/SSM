<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
 
	<display-name>Hinsteny</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>welcome</param-value>
	</context-param>
	
	<!-- Spring Listener 需要加载的配置文件 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext*.xml</param-value>
	</context-param>

	<context-param>
		<param-name>log4jConfiguration</param-name>
		<param-value>classpath:log4j2.xml</param-value>
	</context-param>

	<!-- listeners -->
	<!--<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>-->
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- /listeners -->
	
	<!-- filters -->
	
	<!-- 编码设置 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- /编码设置 -->
	
	<!-- Session上下文设置 (给每一次请求设置并传递request,response对象)-->
	<filter>
		<filter-name>sessionFilter</filter-name>
		<filter-class>com.hisoka.filter.SessionFilter</filter-class>
	</filter>

	<!-- request Analysis -->
	<filter>
		<filter-name>requestAnalysis</filter-name>
		<filter-class>com.hisoka.filter.RequestAnalysis</filter-class>
	</filter>

	<!-- hold up and handle wechat request  -->
	<filter>
		<filter-name>wechatFilter</filter-name>
		<filter-class>com.hisoka.filter.WechatFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>sessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- /Session上下文设置 -->

	<filter-mapping>
		<filter-name>requestAnalysis</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>wechatFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- /filters -->
	
	<!-- Servlet -->
	<!-- 加载web目录下面的配置文件 -->
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<!-- 加载类路径下面的配置文件 -->
	<!-- <servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring-web.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet> -->
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>/</url-pattern><!-- url配置为/,不带文件后缀，静态文件的访问用mvc:resources标签处理 -->
	</servlet-mapping>
	<!-- /Servlet -->
	
	
	<!-- 欢迎页 -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- /欢迎页 -->
	
</web-app>